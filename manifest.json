{
	"manifest_version": 2,
	"name": "KiteMan",
	"description": "Get your trading account status in click from any tab. | Research on Stocks | Sort wish list | Drill down wish list | and many more",
	"version": "1.0",
	"icons": {
		"16": "icon.png",
		"48": "icon.png",
		"128": "icon.png"
	},
	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},
	"background": {
		"scripts": [
			"background.js"
		]
	},
	"content_scripts": [
		{
			"matches": [
				"*://kite.zerodha.com/*"
			],
			"js": [
				"main.js"
			]
		}
	],
	"permissions": [
		"tabs"
	]
}